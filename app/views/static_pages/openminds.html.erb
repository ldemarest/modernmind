<%= render :partial => 'layouts/navbar' %>
<!-- From Blog -->
<section class="bg-color padding-top text-center">
  <div class="container">
    <!-- Section General Title -->
    <div class="general-title">
      <h2>Open Minds</h2>
      <div class="title-devider"></div>
    </div>
    <ul>
      <% @incomplete_minds.each do |mind| %>
      
      <div class="col-xs-6 col-msm-4">
        <div class="thumbnail blog-post">
          
          <!-- Title and Description -->
          <div class="caption">
            <div class="blog-inner-title">
              <a href="blog-inner.html">
                <h3><a href= "minds/<%= mind.id%>"><%= mind.name %></a> </h3>
              </a>
            </div>
            
            <div class="blog-meta">
              
              <span><h3><%= 4-mind.neurons.size%> Neurons left</h3></span>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </ul>
    </div><!-- /container -->
    <!-- All Posts Button -->
    
  </section>
  <!-- End From Open Public Minds -->
</div>