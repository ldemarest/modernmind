<%= render :partial => 'layouts/navbar' %>

  <h1 style = "text-align:center;"> <strong><%= @mind.name%></strong> <br> has
    <strong><%= 4 - @neurons.size %></strong> neurons left </h1> <br>

  <table align = "center" >
    <tr>
      <td id = "td-partial-neuron">
        <div id = "partial-neuron" >
        <img id = "neurons" src="data:image/png;base64, <% if @neurons.size == 0 %> <%else%> <%= @lastneuron.image %> <% end %>" >
        </div>
      </td>
      <td>
        <canvas id ="processing-canvas"> </canvas>
      </td>
    </tr>

</table>
<br>


<div  style= "width:80%; margin:auto; ">
    <div id = "color-options">
   <strong>Colors:</strong>
    <div id="red"></div>
    <div id="orange"></div>
    <div id="yellow"></div>
    <div id="green"></div>
    <div id="blue"></div>
    <div id="purple"></div>
    <div id="black"></div>
    <div id="white"></div>
</div>
<div id = "eraser-options" >
    <strong>Eraser:</strong>
    <img id="eraser" src="/assets/icon_3715.png">
</div>

<div id = "draw-opacity" >   
 <strong>Opacity:</strong>
    <div id="opacity-small" title='Light Opacity'></div>
    <div id="opacity-medium" title='Medium Opacity'></div>
    <div id="opacity-large" title='Dark Opacity'></div>
  </div>


  <div id = "draw-options" > 
   <strong>Width:</strong>
    <img id="stroke-small" title='Small Stroke' src="/assets/icon_7675.png">
    <img id="stroke-medium" title='Medium Stroke' src="/assets/icon_1170.png">
    <img id="stroke-large" title='Large Stroke' src="/assets/icon_12936.png">
  </div>
  
</div>
<br>

<form id = "neuron-form" align = "center">
<input type = "text" id = "neuron-name" placeholder = "Neuron Name" > <br><br>

<button type = "button" class = "btn black-btn"id="save_button" onclick="saveDrawing()">Submit My Neuron</button>
</form>




