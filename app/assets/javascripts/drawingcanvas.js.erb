    prevY = 0;
bg = null;

function setup() {
    $p.size(900, 400);
    $p.background(250, 235, 215)
    $p.stroke(1);
    $p.strokeWeight(1);
    $p.smooth();

}

$p.setup = setup;
setup = setup.bind($p);

boolean runonce = true;

function draw() {



    if ($p.__mousePressed && $p.mouseX > 0) {
        $p.line($p.mouseX, $p.mouseY, prevX, prevY);
    }
    prevX = $p.mouseX;
    prevY = $p.mouseY;
}
$p.draw = draw;
draw = draw.bind($p);