 function setup() {
     $p.size(900, 400);
     $p.background(255, 239, 213);
     $p.smooth();
     $p.frameRate(60);
 }

 $p.setup = setup;
 setup = setup.bind($p);

 function draw() {
     stroke(10);
     if (mousePressed == true) {
         line(mouseX, mouseY, pmouseX, pmouseY);
     }
 }

 $p.draw = draw;
 draw = draw.bind($p);